@model ResidentEditModel

<!-- Modal -->
<div class="modal fade" id="editResidentModal" tabindex="-1" aria-labelledby="editResidentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editResidentModalLabel">Edit Resident</h1>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="Update">
                <input type="hidden" asp-for="Id"/>
                <div class="modal-body">
                    <div>
                        <label asp-for="FirstName">@Html.DisplayNameFor(itemModel => Model.FirstName)</label>
                        <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.FirstName)"/>
                    </div>
                    <div>
                        <label asp-for="LastName">@Html.DisplayNameFor(itemModel => Model.LastName)</label>
                        <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.LastName)"/>
                    </div>
                    <div>
                        <label asp-for="UserName">@Html.DisplayNameFor(itemModel => Model.UserName)</label>
                        <input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.UserName)"/>
                    </div>
                    <div>
                        <label asp-for="Email">@Html.DisplayNameFor(itemModel => Model.Email)</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.Email)"/>
                    </div>
                    @*<div>
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
                    </div>*@
                    <div>
                        <label asp-for="CompanyID">@Html.DisplayNameFor(itemModel => Model.CompanyID)</label>
                        <select asp-for="CompanyID" class="form-control" asp-items="@Model.CompaniesSelectListItems"></select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>