@model LocationEditModel

<!-- Modal -->
<div class="modal fade" id="editLocationModal" tabindex="-1" aria-labelledby="editLocationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editLocationModalLabel">Edit Location</h1>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="Update">
                <input type="hidden" asp-for="ID"/>
                <div class="modal-body">
                    <div>
                        <label asp-for="Name">@Html.DisplayNameFor(itemModel => Model.Name)</label>
                        <input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.Name)"/>
                    </div>
                    <div>
                        <label asp-for="Description">@Html.DisplayNameFor(itemModel => Model.Description)</label>
                        <input asp-for="Description" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.Description)"/>
                    </div>
                    <div>
                        <label asp-for="X">@Html.DisplayNameFor(itemModel => Model.X)</label>
                        <input asp-for="X" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.X)"/>
                    </div>
                    <div>
                        <label asp-for="Y">@Html.DisplayNameFor(itemModel => Model.Y)</label>
                        <input asp-for="Y" class="form-control" placeholder="@Html.DisplayNameFor(itemModel => Model.Y)"/>
                    </div>
                    <div>
                        <label asp-for="LevelID">@Html.DisplayNameFor(itemModel => Model.LevelID)</label>
                        <select asp-for="LevelID" class="form-control" asp-items="@Model.LevelsSelectListItems"></select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>